<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profiles">

    <fragment
        android:id="@+id/navigation_profiles"
        android:name="com.example.profilesapp.ui.user_list.UserListFragment"
        android:label="@string/title_profiles"
        tools:layout="@layout/fragment_user_list" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.profilesapp.ui.camera.CameraFragment"
        android:label="@string/title_camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.profilesapp.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

</navigation>